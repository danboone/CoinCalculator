@page "/"
@using CoinCalculator.Data

<h1>Hello, Welcome to the Change Calculator!</h1>

<label>Enter amount to find coin breakdown</label>
<div class="input-group">
    $<input type="number" min="0.00" max="10000.00" step="0.01" width="420" @bind-value="@Totalamount" class="" data-type="currency" />
</div>
<br>
<button class="btn btn-primary" @onclick="@getCoins">Click me</button>
<br>
<br>
<p>Coins breakdown:</p>
<ul>
    @foreach (var item in coinsBreakdown)
    {
        <li>@item</li>
    }
</ul>
@code {
    List<string> coinsBreakdown { get; set; } = new List<string>();
    private decimal Totalamount { get; set; }
    void getCoins()
    {
        var CoinsCalculate = new CoinsCalculate();

        coinsBreakdown = CoinsCalculate.GetCoins(Totalamount);
    }
}
